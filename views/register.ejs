<% include partials/header.ejs %>
<main>
  <p><%= message%></p>
  <h1><%= title%></h1>
  <div class="form">
    <div class="form-group">
      <form method="post" id ="registerForm">
        <div class="form-group">
          <label for="firstname" class="col-sm-2 control-label">Firstname: </label>
          <input name="firstname" style="color: black;" id="firstname" required type="text"/>
        </div>
        <div class="form-group">
          <label for="lastname" class="col-sm-2 control-label">Lastname: </label>
          <input name="lastname" style="color: black;" id="lastname" required type="text" />
        </div>
        <!-- <div class="form-group">
          <label for="sin" class="col-sm-2 control-label">SIN# : </label>
          <input name="sin" id="sin" style="color: black;" maxlength ="11" placeholder="000-000-000" required />
        </div> -->
        <div class="form-group">
          <label for="username" class="col-sm-2 control-label">Username: </label>
          <input name="username" style="color: black;" id="username" placeholder="Enter your email here" required />
        </div>
        <div class="form-group">
          <label for="password" class="col-sm-2 control-label">Password: </label>
          <input name="password" style="color: black;" id="password" type="password" required />
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-success col-sm-offset-2" value = "Register"/>
          <hr>Already have an account?<a href="/login" title="Login">Login</a>
        </div>
      </form>

    </div>
  </div>
</main>
