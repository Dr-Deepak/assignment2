<% include partials/header.ejs %>

<main>
  <h1><%= title%></h1>
<div class= "form-group">
  <form method="post" id="registerForm">
    <div class="form-inline">
      <label for="firstname" class="col-sm-2 control-label">Firstname: *</label>
      <input class = "form-control"name="firstname" id="firstname" required />
    </div>
    <div class="form-group">
      <label for="lastname" class="col-sm-2 control-label">Lastname: *</label>
      <input name="lastname" id="lastname"  required />
    </div>
    <div class="form-group">
      <label for="sin" class="col-sm-2 control-label">SIN# : *</label>
      <input name="sin" id="sin" placeholder="111-111-111" required />
    </div>
    <div class="form-group">
      <label for="confirm" class="col-sm-2 control-label">Confirm: *</label>
      <input name="confirm" id="confirm" type="password" required />
    </div>
    <div class="form-group">
      <button class="btn btn-success col-sm-offset-2">Register</button>
      <hr />
      Already have an account?  <a href="/login" title="Login">Login</a>
  </form>
</div>
</main>

